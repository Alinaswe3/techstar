/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {

    html {
        width: 100%;
        height: 100%;
        overflow-x: hidden;
    }

    body {
        color:#fff;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
    }

}

@layer components {

    .container {
        max-width: 1200px;
        padding: 0 1em;
        margin: 0 auto;
    }
}